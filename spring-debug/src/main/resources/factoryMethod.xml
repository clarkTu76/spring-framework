<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!--静态工厂-->
	<bean id="person" class="com.example.factoryMethod.PersonStaticFactory" factory-method="getPerson">
		<!-- 会存入 bd.constructorArgumentValues -->
		<constructor-arg value="lisi"/>
	</bean>


	<!--实例工厂-->
	<bean id="personInstanceFactory" class="com.example.factoryMethod.PersonInstanceFactory">

	</bean>

	<!-- factory-bean 指定使用哪个工厂实例-->
	<!-- factory-method 指定使用哪个工厂实例的方法-->
	<bean id="person2" class="com.example.factoryMethod.Person" factory-bean="personInstanceFactory" factory-method="getPerson">
		<constructor-arg value="zhangsan"/>
	</bean>



</beans>